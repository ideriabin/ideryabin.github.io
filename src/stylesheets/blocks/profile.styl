.profile
  display flex
  flex-direction column
  align-items center
  opacity 0
  animation profile-appear .5s .5s ease-out 1 forwards

  &__pic
    position relative
    margin-bottom 2rem
    width 200px
    height 200px
    background url('../images/me.jpg') no-repeat 50% 50%
    background-size cover
    border-radius 50%

  &__name
    margin 0 0 .5rem
    font-size 2.4rem
    font-weight 300
    color $cl-primary

  &__title
    margin 0
    font-weight 300
    font-size 1.4rem
    color $cl-mute

  &__contacts
    margin-top 3.5rem

    for $i in (1..5)
      .contacts__item:nth-child({ $i })
        animation contacts-appear 1s ($i * .1s + .75s) ease-in-out 1 forwards

@keyframes profile-appear
  0%
    transform translateY(-5%)
    opacity 0
  100%
    transform translateY(0)
    opacity 1

@keyframes contacts-appear
  0%
    opacity 0
  33%
    transform translateY(-25%)
  66%
    transform translateY(25%)
  100%
    transform translateY(0)
    opacity 1
