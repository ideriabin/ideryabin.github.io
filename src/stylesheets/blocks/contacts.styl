.contacts
  display flex

  &__item
    position relative
    display flex
    justify-content center
    align-items center
    width 48px
    height 48px
    font-size 2.5rem
    font-weight 700
    text-decoration none
    color #fff
    background-color $cl-light
    border-radius 50%
    opacity 0
    transition background-color .2s

    &::before
      content ''
      position absolute
      top 0
      right 0
      bottom 0
      left 0
      background-color $cl-primary
      border-radius 50%
      opacity 0

    &::after
      content attr(data-title)
      position absolute
      right 0
      bottom 0
      left 0
      transform translateY(-1rem)
      font-size 1.3rem
      font-weight 300
      text-transform lowercase
      text-align center
      white-space nowrap
      color $cl-primary
      opacity 0
      transition transform .2s step-end, opacity .2s linear

    &:active::before
      animation pulse .25s ease-out 1

    &:hover
      background-color lighten($cl-light, 10%)

      &::after
        transform translateY(2rem)
        opacity 1
        transition transform .25s cubic-bezier(0, 0, 0.5, 1.5), opacity .2s .1s linear

      .contacts__icon
        transform scale(1.1)

    & + &
      margin-left 2.5rem

  &__icon
    display inline-flex
    justify-content center
    align-items center
    width 24px
    height 24px
    fill #fff
    transition transform .2s

@keyframes pulse
  0%
    transform scale(1)
    opacity .1
  100%
    transform scale(1.75)
    opacity 0
