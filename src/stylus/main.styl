body
  font-family 'Open Sans', sans-serif
  font-size 0.9em
  color $cLightRed
  background-color $cDarkRed
  opacity 0
  &.ready
    opacity 1
    transition opacity 1s linear

a
  color $cPink
  text-decoration none
  &:hover
    text-decoration underline

#bg
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  background url('../img/bg.png')

.content
  box-sizing border-box
  position relative
  margin 5% auto 0
  max-width 800px
  width 80%

article
.find-me
  padding-left ($wImage + 5)

.me
  position absolute
  top 0
  left 0
  width $wImage
  border-radius 50%

h1
  font-size 1.4em
  font-weight normal
  color $cPink

.find-me
  margin-top 5%
  ul
    display inline-block
    list-style none
    margin 0
    padding 0
    li
      display inline-block
      margin-left 1em

@media screen and (max-device-width: 800px)
  body
    font-size 1.4em
  h1
    font-size 1.2em
  .content
    width 90%
  article
  .find-me
    padding-left 0
  .me
    position static
    display block
    margin 0 auto 50px
    width $wImage*2

@media screen and (max-device-width: 480px)
  body
    font-size 2.4em
